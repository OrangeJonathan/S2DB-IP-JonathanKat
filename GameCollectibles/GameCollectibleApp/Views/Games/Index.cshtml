@model IEnumerable<GameCollectiblesCore.Games.Game>
@{
	ViewData["Title"] = "Game List";
}

<div class="max-w-6xl w-full ml-20 ">
    <div class="h-screen overflow-y-auto">
        <div class="grid grid-cols-3 gap-4 mt-8 mb-8">
            @foreach (var game in Model)
            {
                <div class="bg-white shadow-md rounded-lg px-4 py-6 flex flex-col w-128 h-64">
                    <h2 class="text-lg font-bold mb-4">@game.gameTitle</h2>
                    <p class="text-gray-700 mb-2">@game.gameDescription</p>
                    <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-3 rounded mt-auto" onclick="location.href='@Url.Action("Game", "Games", new { gameID = game.gameID })'">Go To Game</button>
                </div>
            }
            <div class="">
                <input type="button" class="bg-blue-500 text-white shadow-md rounded-lg px-4 py-6 w-64 h-64 hover:bg-blue-900 text-4xl" value="Create" onclick="location.href='@Url.Action("Create", "Games")'" />
            </div>
        </div>
    </div>
</div>